{
  "request": {
    "method": "POST",
    "urlPattern": "/auth/confirm/email",
    "headers": {
      "Content-Type": {
        "equalTo": "application/json"
      }
    },
    "bodyPatterns": [
      {
        "matchesJsonPath": "$.code",
        "equalTo": "900"
      }
    ]
  },
  "response": {
    "status": 400,
    "headers": {
      "Content-Type": "application/json"
    },
    "jsonBody": {
      "is_confirmed": false,
      "message": "Code is invalid or expired"
    }
  }
}